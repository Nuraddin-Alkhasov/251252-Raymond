                            <vw:NumericVarIn Style="{DynamicResource NVI_Main}" Width="80" Height="45" LocalizableUnitText="@Units.h"  RawLimitMax="23" Margin="10,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[3].Hour" AuthorizationRight="HRScheduler"/>
                            <vw:NumericVarIn Style="{DynamicResource NVI_Main}" Width="80" Height="45" LocalizableUnitText="@Units.m" RawLimitMax="59" Margin="5,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[3].Minute" AuthorizationRight="HRScheduler" />
                        </StackPanel>
                        <StackPanel Margin="0,5,0,0" Orientation="Horizontal" Grid.Row="4">
                            <vw:ComboBox Style="{DynamicResource CB_Main}" Width="200" Height="45" StateList="{DynamicResource P_Weekdays}" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[4].DayOfWeek" AuthorizationRight="HRScheduler"/>
                            <vw:ComboBox Style="{DynamicResource CB_Main}" Width="200" Height="45" StateList="{DynamicResource P_Function}" Margin="5,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[4].Function" AuthorizationRight="HRScheduler"/>
                            <vw:NumericVarIn Style="{DynamicResource NVI_Main}" Width="80" Height="45" LocalizableUnitText="@Units.h"  RawLimitMax="23" Margin="10,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[4].Hour" AuthorizationRight="HRScheduler"/>
                            <vw:NumericVarIn Style="{DynamicResource NVI_Main}" Width="80" Height="45" LocalizableUnitText="@Units.m" RawLimitMax="59" Margin="5,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[4].Minute" AuthorizationRight="HRScheduler" />
                        </StackPanel>
                        <StackPanel Margin="0,5,0,0" Orientation="Horizontal" Grid.Row="5">
                            <vw:ComboBox Style="{DynamicResource CB_Main}" Width="200" Height="45" StateList="{DynamicResource P_Weekdays}" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[5].DayOfWeek" AuthorizationRight="HRScheduler"/>
                            <vw:ComboBox Style="{DynamicResource CB_Main}" Width="200" Height="45" StateList="{DynamicResource P_Function}" Margin="5,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[5].Function" AuthorizationRight="HRScheduler"/>
                            <vw:NumericVarIn Style="{DynamicResource NVI_Main}" Width="80" Height="45" LocalizableUnitText="@Units.h"  RawLimitMax="23" Margin="10,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[5].Hour" AuthorizationRight="HRScheduler"/>
                            <vw:NumericVarIn Style="{DynamicResource NVI_Main}" Width="80" Height="45" LocalizableUnitText="@Units.m" RawLimitMax="59" Margin="5,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[5].Minute" AuthorizationRight="HRScheduler" />
                        </StackPanel>
                        <StackPanel Margin="0,5,0,0" Orientation="Horizontal" Grid.Row="6">
                            <vw:ComboBox Style="{DynamicResource CB_Main}" Width="200" Height="45" StateList="{DynamicResource P_Weekdays}" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[6].DayOfWeek" AuthorizationRight="HRScheduler"/>
                            <vw:ComboBox Style="{DynamicResource CB_Main}" Width="200" Height="45" StateList="{DynamicResource P_Function}" Margin="5,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[6].Function" AuthorizationRight="HRScheduler"/>
                            <vw:NumericVarIn Style="{DynamicResource NVI_Main}" Width="80" Height="45" LocalizableUnitText="@Units.h"  RawLimitMax="23" Margin="10,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[6].Hour" AuthorizationRight="HRScheduler"/>
                            <vw:NumericVarIn Style="{DynamicResource NVI_Main}" Width="80" Height="45" LocalizableUnitText="@Units.m" RawLimitMax="59" Margin="5,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[6].Minute" AuthorizationRight="HRScheduler" />
                        </StackPanel>
                        <StackPanel Margin="0,5,0,0" Orientation="Horizontal" Grid.Row="7">
                            <vw:ComboBox Style="{DynamicResource CB_Main}" Width="200" Height="45" StateList="{DynamicResource P_Weekdays}" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[7].DayOfWeek" AuthorizationRight="HRScheduler"/>
                            <vw:ComboBox Style="{DynamicResource CB_Main}" Width="200" Height="45" StateList="{DynamicResource P_Function}" Margin="5,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[7].Function" AuthorizationRight="HRScheduler"/>
                            <vw:NumericVarIn Style="{DynamicResource NVI_Main}" Width="80" Height="45" LocalizableUnitText="@Units.h"  RawLimitMax="23" Margin="10,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[7].Hour" AuthorizationRight="HRScheduler"/>
                            <vw:NumericVarIn Style="{DynamicResource NVI_Main}" Width="80" Height="45" LocalizableUnitText="@Units.m" RawLimitMax="59" Margin="5,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[7].Minute" AuthorizationRight="HRScheduler" />
                        </StackPanel>

                    </Grid>

                    <Border Grid.Row="3" VerticalAlignment="Bottom" Background="{DynamicResource FP_Red}"  Height="2" CornerRadius="2" />

                    <Grid  Grid.Row="4" IsEnabled="False">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <vw:Button Grid.Column="0" Height="50" Width="200" LocalizableText="@Buttons.Text19"  HorizontalAlignment="Left"  Style="{DynamicResource B_Blue_ns}" Click="LeftButton_Click" AuthorizationRight="HRScheduler"/>
                        <vw:Button Grid.Column="1" Height="50"  Width="200" LocalizableText="@Buttons.Text17" HorizontalAlignment="Right" Style="{DynamicResource B_Red_ns}" Click="RightButton_Click" Margin="0,10,0,10" AuthorizationRight="HRScheduler"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</vw:View>