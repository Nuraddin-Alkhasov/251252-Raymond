<vw:View 
    x:Class="HMI.DialogRegion.MO.Views.M2_Sheduler"
          
	        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
	        xmlns:vw="http://inosoft.com/visiwin7" 
	         Width="1920" Height="1080" Background="{DynamicResource DialogSurroundBrush}" Opacity="0" Loaded="View_Loaded">
    <Grid >
        <Grid x:Name="border" RenderTransformOrigin="1, 0.5" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Grid.RenderTransform>
                <ScaleTransform ScaleX="0.3" ScaleY="0.3" />
            </Grid.RenderTransform>
            <vw:Border Background="White"  Opacity="0.7" CornerRadius="5" >
                <Border.Effect>
                    <BlurEffect Radius="10"/>
                </Border.Effect>
            </vw:Border>

            <Border  BorderBrush="White" Margin="5" BorderThickness="0" Background="{DynamicResource BackgroundBrush}" CornerRadius="5" >
                <Grid  Margin="10,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="70" />
                    </Grid.RowDefinitions>
                    <vw:TextBlock x:Name="HeaderText" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontSize="18" FontWeight="Bold" LocalizableText="@MachineOverview.Text64" Width="400" />
                    <vw:Button x:Name="CancelButton" HorizontalAlignment="Right" VerticalAlignment="Top" Style="{DynamicResource B_Close}" Width="80" Height="45" Text="X"  Margin="0,0,0,0" Click="CancelButton_Click"/>
                    <Border Grid.Row="1" VerticalAlignment="Top" Background="{DynamicResource FP_Red}"  Height="2" CornerRadius="2" />
                    <Grid Grid.Row="2" Margin="10,0,10,0" IsEnabled="False">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>

                        </Grid.RowDefinitions>
                        <Grid >
                            <vw:TextBlock Margin="0,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" LocalizableText="@MachineOverview.Text69" Foreground="White" FontSize="16" FontWeight="Bold" Width="200" Height="25" TextAlignment="Center"/>
                            <vw:TextBlock Margin="205,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" LocalizableText="@MachineOverview.Text72" Foreground="White" FontSize="16" FontWeight="Bold" Width="200" Height="25" TextAlignment="Center"/>
                            <vw:TextBlock Margin="415,10,0,10" HorizontalAlignment="Left" VerticalAlignment="Top" LocalizableText="@MachineOverview.Text71" Foreground="White" FontSize="16" FontWeight="Bold" Width="163" Height="25"  TextAlignment="Center"/>
                        </Grid>
                        <StackPanel Orientation="Horizontal" Grid.Row="1">
                            <vw:ComboBox Style="{DynamicResource CB_Main}" Width="200" Height="45" StateList="{DynamicResource P_Weekdays}" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[1].DayOfWeek" AuthorizationRight="HRScheduler"/>
                            <vw:ComboBox Style="{DynamicResource CB_Main}" Width="200" Height="45" StateList="{DynamicResource P_Function}" Margin="5,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[1].Function" AuthorizationRight="HRScheduler"/>
                            <vw:NumericVarIn Style="{DynamicResource NVI_Main}" Width="80" Height="45" LocalizableUnitText="@Units.h"  RawLimitMax="23" Margin="10,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[1].Hour" AuthorizationRight="HRScheduler"/>
                            <vw:NumericVarIn Style="{DynamicResource NVI_Main}" Width="80" Height="45" LocalizableUnitText="@Units.m" RawLimitMax="59" Margin="5,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[1].Minute" AuthorizationRight="HRScheduler" />
                        </StackPanel>
                        <StackPanel Margin="0,5,0,0" Orientation="Horizontal" Grid.Row="2">
                            <vw:ComboBox Style="{DynamicResource CB_Main}" Width="200" Height="45" StateList="{DynamicResource P_Weekdays}" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[2].DayOfWeek" AuthorizationRight="HRScheduler"/>
                            <vw:ComboBox Style="{DynamicResource CB_Main}" Width="200" Height="45" StateList="{DynamicResource P_Function}" Margin="5,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[2].Function" AuthorizationRight="HRScheduler"/>
                            <vw:NumericVarIn Style="{DynamicResource NVI_Main}" Width="80" Height="45" LocalizableUnitText="@Units.h"  RawLimitMax="23" Margin="10,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[2].Hour" AuthorizationRight="HRScheduler"/>
                            <vw:NumericVarIn Style="{DynamicResource NVI_Main}" Width="80" Height="45" LocalizableUnitText="@Units.m" RawLimitMax="59" Margin="5,0,0,0" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[2].Minute" AuthorizationRight="HRScheduler" />
                        </StackPanel>
                        <StackPanel Margin="0,5,0,0" Orientation="Horizontal" Grid.Row="3">
                            <vw:ComboBox Style="{DynamicResource CB_Main}" Width="200" Height="45" StateList="{DynamicResource P_Weekdays}" VariableName="CPU4.PLC.Blocks.00 Main.02 HMI.00 Main.DB HMI Main.Timer.Time[3].DayOfWeek" AuthorizationRight="HRScheduler"/>
