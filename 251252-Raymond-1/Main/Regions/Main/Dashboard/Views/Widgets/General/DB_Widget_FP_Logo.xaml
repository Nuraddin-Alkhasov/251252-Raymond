<vw:View x:Class="HMI.MainRegion.Dashboard.Widgets.DB_Widget_FP_Logo"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:vw="http://inosoft.com/visiwin7"
		 Width="585" Height="225" Opacity="0">

    <Grid x:Name="border"  RenderTransformOrigin="1, 0.5"  Loaded="Border_Loaded">
        <Grid.RenderTransform>
            <ScaleTransform ScaleX="0.3" ScaleY="0.3" />
        </Grid.RenderTransform>
        <vw:Border Background="White" Margin="-5"  Opacity="0.7" CornerRadius="5" >
            <Border.Effect>
                <BlurEffect Radius="10"/>
            </Border.Effect>
        </vw:Border>
        <Border CornerRadius="5"  Background="White" BorderThickness="2" BorderBrush="{DynamicResource FP_Blue}" >

            <vw:SymbolPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Symbol="{DynamicResource Dashboard}" />

        </Border>
    </Grid>

</vw:View>