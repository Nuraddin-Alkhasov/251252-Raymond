                            <local:TouchKeyboardButton TouchKeyMapping="{DynamicResource TKM_Key10}" TextMode="SingleCenterText" Width="80" Height="80" Margin="5,0,0,0"  Style="{DynamicResource B_Keyboard}"/>
                            <local:TouchKeyboardButton TouchKeyMapping="{DynamicResource TKM_Back}"  TextCenter="←" TouchKeyName="TKey_Back" TextMode="SingleCenterText" Width="165" Height="80" Margin="5,0,0,0" Style="{DynamicResource B_Keyboard}"/>

                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.ColumnSpan="12" Orientation="Horizontal" Margin="0,5,0,0">
                            <local:TouchKeyboardButton TouchKeyMapping="{DynamicResource TKM_Key11}" TextMode="SingleCenterText" Width="80" Height="80"  Style="{DynamicResource B_Keyboard}"/>
                            <local:TouchKeyboardButton TouchKeyMapping="{DynamicResource TKM_Key12}" TextMode="SingleCenterText" Width="80" Height="80" Margin="5,0,0,0" Style="{DynamicResource B_Keyboard}"/>
