                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Grid.ColumnSpan="12" Orientation="Horizontal">
                            <local:TouchKeyboardButton TouchKeyMapping="{DynamicResource TKM_Key01}" TextMode="SingleCenterText" Width="80" Height="80" Style="{DynamicResource B_Keyboard}"/>
                            <local:TouchKeyboardButton TouchKeyMapping="{DynamicResource TKM_Key02}" TextMode="SingleCenterText" Width="80" Height="80" Margin="5,0,0,0"  Style="{DynamicResource B_Keyboard}"/>
                            <local:TouchKeyboardButton TouchKeyMapping="{DynamicResource TKM_Key03}" TextMode="SingleCenterText" Width="80" Height="80" Margin="5,0,0,0" Style="{DynamicResource B_Keyboard}"/>
                            <local:TouchKeyboardButton TouchKeyMapping="{DynamicResource TKM_Key04}" TextMode="SingleCenterText" Width="80" Height="80" Margin="5,0,0,0" Style="{DynamicResource B_Keyboard}"/>
                            <local:TouchKeyboardButton TouchKeyMapping="{DynamicResource TKM_Key05}" TextMode="SingleCenterText" Width="80" Height="80" Margin="5,0,0,0"  Style="{DynamicResource B_Keyboard}"/>
                            <local:TouchKeyboardButton TouchKeyMapping="{DynamicResource TKM_Key06}" TextMode="SingleCenterText" Width="80" Height="80" Margin="5,0,0,0"  Style="{DynamicResource B_Keyboard}"/>
                            <local:TouchKeyboardButton TouchKeyMapping="{DynamicResource TKM_Key07}" TextMode="SingleCenterText" Width="80" Height="80" Margin="5,0,0,0"  Style="{DynamicResource B_Keyboard}"/>
                            <local:TouchKeyboardButton TouchKeyMapping="{DynamicResource TKM_Key08}" TextMode="SingleCenterText" Width="80" Height="80" Margin="5,0,0,0"  Style="{DynamicResource B_Keyboard}"/>
