                        <StackPanel Grid.Row="2" Grid.ColumnSpan="12" Orientation="Horizontal" Margin="0,5,0,0">
                            <local:TouchKeyboardButton TouchKeyMapping="{DynamicResource TKM_Key23}" TextMode="SingleCenterText" Width="80" Height="80" Style="{DynamicResource B_Keyboard}"/>
