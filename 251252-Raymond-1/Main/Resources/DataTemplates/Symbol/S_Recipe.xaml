<ResourceDictionary
	            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="Dip">
        <Image Source="/Main/Resources/Images/Recipe/dip.png" Stretch="Fill" Width="80" Height="80" />
