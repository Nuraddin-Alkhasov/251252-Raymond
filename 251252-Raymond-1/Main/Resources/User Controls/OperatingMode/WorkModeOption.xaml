<UserControl x:Class="HMI.Resources.UserControls.MO.WorkModeOption"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vw="http://inosoft.com/visiwin7"
        VerticalAlignment="Center" HorizontalAlignment="Center">

    <Grid >

        <GroupBox x:Name="H" FontWeight="Bold" FontSize="20" Foreground="White"  BorderThickness="1" BorderBrush="{DynamicResource FP_Blue_Gradient}">

            <StackPanel Orientation="Horizontal" Margin="10,10,10,10" >
                <vw:Button x:Name="btnstart" Height="80" Width="160" Style="{DynamicResource B_Gray}" Click="start_Click" LocalizableText="@Buttons.Text19" AuthorizationRight="FansHeater" />
                <vw:Button x:Name="btnstop" Height="80" Width="160" Margin="20,0,0,0" Style="{DynamicResource B_Red}" LocalizableText="@Buttons.Text17" Click="stop_Click" AuthorizationRight="FansHeater"/>
            </StackPanel>
        </GroupBox>

    </Grid>
</UserControl>
